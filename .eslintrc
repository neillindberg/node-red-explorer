{
        "root": true,
        "env": {
                "node": true
        },
        "extends": [
                "eslint:recommended"
        ],
        "parserOptions": {
                "ecmaVersion": 6,
                "sourceType": "module"
        },
        "rules": {
                "semi": ["error", "always", { "omitLastInOneLineBlock": true}],
                "quotes": [
                        "error",
                        "single"
                ],
                "comma-dangle": [
                        "error",
                        "never"
                ],
                "space-before-function-paren": [
                        "error",
                        "always"
                ],
                "array-bracket-spacing": [
                        "error",
                        "never"
                ],
                "sort-imports": "off",
                "linebreak-style": "off",
                "prefer-named-capture-group": "off",
                "no-console": "off"
        }
}